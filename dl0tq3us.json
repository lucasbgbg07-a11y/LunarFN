        @keyframes float1 {
            0%, 100% {
                transform: translate(0, 0) scale(1);
            }
            25% {
                transform: translate(120px, -80px) scale(1.15);
            }
            50% {
                transform: translate(-100px, 120px) scale(0.85);
            }
            75% {
                transform: translate(80px, 60px) scale(1.05);
            }
        }

        @keyframes float2 {
            0%, 100% {
                transform: translate(0, 0) scale(1);
            }
            25% {
                transform: translate(-140px, 100px) scale(1.25);
            }
            50% {
                transform: translate(100px, -140px) scale(0.75);
            }
            75% {
                transform: translate(-60px, -80px) scale(1.1);
            }
        }

        @keyframes pulse {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0.5;
            }
        }

        .container {
            background: rgba(45, 45, 50, 0.95);
            border-radius: 20px;
            padding: 40px;
            max-width: 800px;
            width: 100%;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
            position: relative;
            z-index: 1;
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
        }

        .logo-custom {
            width: 120px;
            height: 120px;
            margin: 0 auto 20px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.5);
            position: relative;
            overflow: hidden;
        }

        .logo-custom img {
            width: 70px;
            height: 70px;
            animation: logoFloat 3s ease-in-out infinite;
        }

        @keyframes logoFloat {
            0%, 100% {
                transform: translateY(0px);
            }
            50% {
                transform: translateY(-10px);
            }
        }

        .header h1 {
            font-size: 2.5em;
            color: #667eea;
            margin-bottom: 10px;
        }

        .header p {
            color: #b0b0b0;
            font-size: 1.1em;
        }

        .section {
            margin-bottom: 35px;
        }

        .section-title {
            font-size: 1.5em;
            color: #e0e0e0;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #667eea;
        }

        .server-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            margin-bottom: 12px;
            background: rgba(60, 60, 65, 0.6);
            border-radius: 10px;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .server-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

        .server-name {
            font-weight: 600;
            color: #e0e0e0;
            font-size: 1.1em;
        }

        .status {
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: 600;
            padding: 8px 16px;
            border-radius: 20px;
        }

        .server-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .ping {
            color: #a0a0a0;
            font-size: 0.9em;
            font-weight: 500;
        }

        .status-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            animation: pulse 2s infinite;
        }

        .status.online {
            background: #d4edda;
            color: #155724;
        }

        .status.online .status-dot {
            background: #28a745;
        }

        .status.offline {
            background: #f8d7da;
            color: #721c24;
        }

        .status.offline .status-dot {
            background: #dc3545;
            animation: none;
        }

        .backend-status {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            font-size: 1.2em;
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .region-group {
            margin-bottom: 25px;
        }

        .region-label {
            font-size: 1.1em;
            color: #667eea;
            font-weight: 600;
            margin-bottom: 10px;
            padding-left: 10px;
        }

        @media (max-width: 600px) {
            .container {
                padding: 25px;
            }

            .header h1 {
                font-size: 2em;
            }

            .server-item {
                flex-direction: column;
                gap: 10px;
                text-align: center;
            }
        }
    </style>
</head>
<body>
    <div class="floating-circle circle1"></div>
    <div class="floating-circle circle2"></div>
    <div class="floating-circle circle3"></div>
    <div class="floating-circle circle4"></div>
