    <script>
        const circles = document.querySelectorAll('.floating-circle');
        
        document.addEventListener('mousemove', (e) => {
            const mouseX = e.clientX;
            const mouseY = e.clientY;
            
            circles.forEach((circle, index) => {
                const rect = circle.getBoundingClientRect();
                const circleX = rect.left + rect.width / 2;
                const circleY = rect.top + rect.height / 2;
                
                const deltaX = mouseX - circleX;
                const deltaY = mouseY - circleY;
                
                const distance = Math.sqrt(deltaX * deltaX + deltaY * deltaY);
                const maxDistance = 300;
                
                if (distance < maxDistance) {
                    const force = (maxDistance - distance) / maxDistance;
                    const moveX = (deltaX / distance) * force * 50 * (index % 2 === 0 ? 1 : -1);
                    const moveY = (deltaY / distance) * force * 50 * (index % 2 === 0 ? 1 : -1);
                    
                    circle.style.transform = `translate(${moveX}px, ${moveY}px) scale(${1 + force * 0.2})`;
                } else {
                    circle.style.transform = 'translate(0, 0) scale(1)';
                }
            });
        });
    </script>
